    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Parsers.php",
            "src/Formatters.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php"
        ],
        "psr-4": {
            "Differ\\Tests\\": "tests"
        }
    },
    "require": {
        "ext-json": "*",
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^5.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "phpcs": "phpcs",
        "test": "phpunit tests",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-clover=build/logs/clover.xml tests"
        ]
    }
}
